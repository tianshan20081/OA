<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.aoeng.oa.model">

	<class name="Party" table="T_PARTY" discriminator-value="X">
		<!-- 主键 -->
		<id name="id">
			<!-- 主键生成策略 -->
			<generator class="native"></generator>
		</id>
		<discriminator column="party_type" />
		<property name="name" />
		<property name="description" />
		<property name="sn" />
		<many-to-one name="parent" column="pid" />
		<set name="children" inverse="true" lazy="extra" order-by="id">
			<key column="pid"></key>
			<one-to-many class="Party" />
			<filter name="no_contain_person" condition="party_type !='p'"></filter>
		</set>
		<subclass name="Company" discriminator-value="C">
			<property name="tel" />
			<property name="fax" />
			<property name="email" />
			<property name="address" />
			<property name="postcode" />
			<property name="site" />
			<property name="industry" />
		</subclass>
		<subclass name="Person" discriminator-value="P">
			<property name="duty"/>
			<property name="phone"/>
			<property name="sex"/>
			<property name="qq"/>
			<property name="email"/>
			<property name="msn"/>
			<property name="address"/>
			<property name="snumber"/>
		</subclass>
		<subclass name="Department" discriminator-value="D">
			<property name="snumber"/>
			<property name="tel"/>
		</subclass>
		<subclass name="Position" discriminator-value="S"/>

	</class>
	<filter-def name="no_contain_person">
	</filter-def>

</hibernate-mapping>
